class Sprite {
    constructor(image, x, y, zIndex = 0) {
        this.image = image;
        this.x = x;
        this.y = y;
        this.zIndex = zIndex; // add attribute for zIndex
    }

    draw(context) { // method to draw the sprite
        context.drawImage(this.image, this.x, this.y);
    }
}

